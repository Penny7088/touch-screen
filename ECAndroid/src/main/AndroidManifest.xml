<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yysp.ecandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 读写通讯录权限-->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INJECT_EVENTS"/>

    <application
        android:name="com.yysp.ecandroid.application.ECApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${APPNAME}"
        android:supportsRtl="true"
        tools:replace="icon,label,allowBackup">

        <activity
            android:name="com.yysp.ecandroid.view.activity.ECLoadingActivity_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ECStartTheme"></activity>

        <activity
            android:name="com.yysp.ecandroid.view.activity.ECMainActivity_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/ECTheme" />

        <activity
            android:name="com.yysp.ecandroid.view.activity.ECLoginDemoActivity_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/ECTheme" />


        <activity
            android:name=".view.activity.ECTaskActivity_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Design.Light.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".service.LongRunningService" />
        <!-- 友盟自定义消息service-->
        <service android:name=".service.MyPushIntentService" />
        <!--辅助service-->
        <service
            android:name=".service.HelpService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService"/>
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/help"/>

        </service>

        <receiver android:name=".receiver.AlarmReceiver" />

        <!-- 腾讯bugly -->
        <!--<meta-data-->
        <!--android:name="BUGLY_APP_CHANNEL"-->
        <!--android:value="${CHANNEL_NAME}" />-->
        <!--<meta-data-->
        <!--android:name="BUGLY_APPID"-->
        <!--android:value="${QQBUGLY_ID}" />-->
        <!--<meta-data-->
        <!--android:name="BUGLY_ENABLE_DEBUG"-->
        <!--android:value="false" />-->


        <!-- 友盟推送sdk -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="${UMENG_APPKEY}"></meta-data>
        <meta-data
            android:name="UMENG_MESSAGE_SECRET"
            android:value="${UMENG_MESSAGE_SECRET}"></meta-data>

    </application>
</manifest>
